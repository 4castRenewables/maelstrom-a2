entry_points:
  split_rain_classifier:
    parameters:
      filename_tweets:
        type: str
        default: /p/project/deepacf/maelstrom/ehlert1/data/tweets/2017_2020_tweets_rain_sun_vocab_emojis_locations_bba_Tp_era5_no_bots_normalized_filtered_weather_stations_fix_predicted_simpledeberta_radar.nc
      output_dir:
        type: str
        default: /p/project/deepacf/maelstrom/ehlert1/data/training_sets_rain_classifier/dataset_split_thresh6M3/
      key_precipitation:
        type: str
        default: tp_h_mm
      precipitation_threshold_rain:
        type: float
        default: 6e-3
      key_precipitation_station:
        type: str
        default: station_tp_mm
      precipitation_threshold_rain_station:
        type: float
        default: 0.1
      key_distance_weather_station:
        type: str
        default: station_distance_km
      maximum_distance_to_station:
        type: float
        default: 1
      validation_size:
        type: float
        default: 0.2
      test_size:
        type: float
        default: 0.2
    command: >
      python build_dataset_rain_classifier.py
        --filename_tweets {filename_tweets}
        --output_dir {output_dir}
        --key_precipitation {key_precipitation}
        --precipitation_threshold_rain {precipitation_threshold_rain}
        --key_precipitation_station {key_precipitation_station}
        --precipitation_threshold_rain_station {precipitation_threshold_rain_station}
        --key_distance_weather_station {key_distance_weather_station}
        --maximum_distance_to_station {maximum_distance_to_station}
        --validation_size {validation_size}
        --test_size {test_size}
  train:
    parameters:
      learning_rate:
        type: float
        default: 0.00003
      batch_size:
        type: int
        default: 32
      weight_decay:
        type: float
        default: 0.01
      iteration:
        type: int
        default: 1
      evaluation_strategy:
        type: str
        default: steps
      eval_steps:
        type: int
        default: 500
      epochs:
        type: int
        default: 1
      model_path:
        type: str
        default: /p/project/deepacf/maelstrom/ehlert1/deberta-v3-base/
      model_name:
        type: str
        default: deberta_base
      filename_dataset_train_rain:
        type: str
        default:
          /p/scratch/deepacf/unicore-jobs/98a76f21-83be-4422-9515-d557705e4414/dataset_split/dataset_rain_split/2017_2020_tweets_vocab_emojis_locations_era5_stations_simpledeberta_radar_train.nc
      filename_dataset_validate_rain:
        type: str
        default:
          /p/scratch/deepacf/unicore-jobs/98a76f21-83be-4422-9515-d557705e4414/dataset_split/dataset_rain_split/2017_2020_tweets_vocab_emojis_locations_era5_stations_simpledeberta_radar_validate.nc
      filename_dataset_test_rain:
        type: str
        default:
          /p/scratch/deepacf/unicore-jobs/98a76f21-83be-4422-9515-d557705e4414/dataset_split/dataset_rain_split/2017_2020_tweets_vocab_emojis_locations_era5_stations_simpledeberta_radar_test.nc
      outdir:
        type: str
        default: "./"
      run_name:
        type: str
        default: "RUNNAME"

    command: >
      python finetune_deberta_classifier.py
        --model_path {model_path}
        --model_name {model_name}
        --filename_dataset_train {filename_dataset_train_rain}
        --filename_dataset_validate {filename_dataset_validate_rain}
        --filename_dataset_test {filename_dataset_test_rain}
        --output_dir {outdir}
        --log_gpu_memory
        --run_name {run_name}
        --learning_rate {learning_rate}
        --epochs {epochs}
        --classifier_domain rain
        --key_output raining
        --batch_size {batch_size}
        --weight_decay {weight_decay}
        --iteration {iteration}
        --evaluation_strategy {evaluation_strategy}
        --eval_steps {eval_steps}
        --task_name finetune_rain